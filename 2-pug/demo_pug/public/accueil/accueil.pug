extends ../../includes/header
block var
    - title = 'Accueil'
    - view = "accueil"
    - domaine = "public"

block append head
  script(src='./js/lib/jquery-3.3.1.slim.min.js')
  script(src='./js/lib/bootstrap.min.js')

block content
    div.row.mb-3
        div.col-sm-8.offset-sm-2
            div#carouselExampleIndicators.carousel.slide(data-ride="carousel")
                ol.carousel-indicators
                    li.active(data-target="#carouselExampleIndicators" data-slide-to="0")
                    li(data-target="#carouselExampleIndicators" data-slide-to="1")
                    li(data-target="#carouselExampleIndicators" data-slide-to="2")
                div.carousel-inner(style="overflow: hidden; border-radius:4px;border:solid 1px white;")
                    div.carousel-item.active
                        img.d-block.w-100(src="./img/image4.jpg" alt="Enfant psychomotricit√©")
                    div.carousel-item
                        img.d-block.w-100(src="./img/image2.jpg" alt="Enfant psychologie")
                    div.carousel-item
                        img.d-block.w-100(src="./img/image3.jpg" alt="Enfant comportement")
                a.carousel-control-prev(href="#carouselExampleIndicators" role="button" data-slide="prev")
                    span.carousel-control-prev-icon(aria-hidden="true")
                    span.sr-only Previous
                a.carousel-control-next(href="#carouselExampleIndicators" role="button" data-slide="next")
                    span.carousel-control-next-icon(aria-hidden="true")
                    span.sr-only Next
